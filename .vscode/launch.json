{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "New Arch Pretrained",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint",
                "./checkpoints/new_arch_pretrained",
                "--run-name",
                "debug_new_arch_pretrained",
                "--no-restore-optim-state",
            ]
        },
        {
            "name": "QM9 New",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--extension",
                "variance",
                "--run-name",
                "debug_new_arch",
            ]
        },
        {
            "name": "Debug current run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint",
                "./checkpoints/partly_pretrained_vanilla_lower_lr_bak",
                "--run-name",
                "debug_partly_pretrained_vanilla_lower_lr",
                "--start-epoch",
                "535"
            ]
        },
        {
            "name": "Debug Continue",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint",
                "./checkpoints/partly_pretrained_vanilla_lower_lr/",
                "--lr",
                "1e-5",
                "--run-name",
                "partly_pretrained_vanilla_lower_lr"
            ]
        },
        {
            "name": "Debug PyTest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-s" // do not capture stdout, so that we can see print statements, etc.
            ]
        }
    ]
}